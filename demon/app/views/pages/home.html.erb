      <td class="main">
        <h1 class="question">What do you want to ask?</h1>
        <%= render 'shared/question_form' %>
      

      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>

<% else %>
